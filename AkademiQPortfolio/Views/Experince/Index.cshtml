                    <a asp-controller="Skill"
                       asp-action="UpdateSkill"
                       asp-route-id="3"
                       class="btn btn-success btn-sm">
                        Güncelle
                    </a>
                </td>
                <td>
                    <a asp-controller="Skill"
                       asp-action="DeleteSkill"
                       asp-route-id="3"
                       class="btn btn-danger btn-sm">
                        Sil
                    </a>
                </td>
            </tr>

            <tr>
                <td>4</td>
                <td>C</td>
                <td>70</td>
                <td>26.11.2025</td>
