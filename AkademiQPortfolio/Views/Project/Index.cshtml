@model List<ProjectsTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Burası yetenekler sayfası</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ProjectID</th>
                <th>ProjectName</th>
                <th>Title</th>
                <th>Image</th>
                <th>Category</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectId</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Title</td>
                    <td>@item.Image</td>
                    <td>@item.Category.CategoryName</td>
                    <td>
                        <a href="/Skill/UpdateSkill/@item.ProjectId" class="btn btn-success">
                            Güncelle
                        </a>
                    </td>
                    <td>
                        <a href="/Skill/DeleteSkill/@item.ProjectId" class="btn btn-danger">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
