@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

h1>Burası yetenekler sayfası</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>DeneyimId</th>
                <th>Title</th>
                <th>Description</th>
                <th>Icon</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>

        </thead>

        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                    <td>@item.ExperinceId</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td><a href="/Skill/UpdateSkill/@item.ExperinceId" class="btn btn-success">Güncelle</a> </td>
                    <td> <a href="/Skill/DeleteSkill/@item.ExperinceId" class="btn btn-danger">Sil</a></td>
                }
            </tr>
        <tbody>
    </table>
</div>

